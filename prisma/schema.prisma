datasource db {
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Workout {
  id        Int      @id @default(autoincrement())
  userId    String
  exercise  String
  duration  Int
  intensity String
  date      DateTime @default(now())
}

model Weight {
  id     Int      @id @default(autoincrement())
  userId String
  value  Float
  date   DateTime @default(now())
}

model WorkoutPlan {
  id        String   @id @default(uuid())
  userId    String
  date      DateTime @default(now())
  readiness Int
  weather   String
  avgTemp   Float
  focus     String
  notes     String?
  items     Json
  completed Boolean  @default(false)
}